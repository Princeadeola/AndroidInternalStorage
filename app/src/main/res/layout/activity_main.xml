<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:padding="1sp"
        android:layout_marginTop="12dp"
        android:textSize="22sp"
        />
    <EditText
        android:id="@+id/nameEditTextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nameID"
        />

    <TextView
        android:id="@+id/passwordID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:padding="1sp"
        android:layout_marginTop="72dp"
        android:textSize="22sp"
        />

    <EditText
        android:id="@+id/passwordEditTextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/passwordID"
        android:inputType="textPassword"
        android:layout_marginTop="60dp"
        />

    <Button
        android:id="@+id/saveBtnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/passwordEditTextID"
        android:backgroundTint="#06B809"
        android:text="Save"
        android:onClick="Save"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#06B809"
        android:text="Next"
        android:layout_below="@id/passwordEditTextID"
        android:layout_toEndOf="@id/saveBtnID"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"
        android:onClick="Next"
        />

</RelativeLayout>